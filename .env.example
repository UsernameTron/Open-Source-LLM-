# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security Configuration
SECRET_KEY=your-secret-key-here  # Used for JWT token signing
API_KEY=your-api-key-here        # API authentication key
JWT_SECRET=your-jwt-secret-here  # JWT token secret
BACKEND_CORS_ORIGINS=http://localhost:8000,http://localhost:3000
CSP_EXTRA_SOURCES=              # Additional CSP sources if needed
SECURE_HEADERS=true             # Enable security headers
SSL_CERT_PATH=                  # Path to SSL certificate
SSL_KEY_PATH=                   # Path to SSL private key

# Authentication
AUTH_REQUIRED=true              # Require authentication
TOKEN_EXPIRE_MINUTES=30         # JWT token expiration
MAX_LOGIN_ATTEMPTS=5            # Maximum login attempts
LOCKOUT_MINUTES=15             # Account lockout duration

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60       # Default rate limit
RATE_LIMIT_AUTH=20             # Auth endpoint rate limit
RATE_LIMIT_INFERENCE=50        # Inference endpoint rate limit
RATE_LIMIT_WINDOW=60           # Rate limit window in seconds

# File Upload Security
MAX_UPLOAD_SIZE=104857600      # 100MB in bytes
ALLOWED_UPLOAD_TYPES=application/pdf,text/plain,text/csv
SCAN_UPLOADS=true              # Scan uploads for malware
MAX_FILENAME_LENGTH=255        # Maximum filename length

# Resource Limits
MAX_MEMORY_PCT=85              # Maximum memory usage percentage
MAX_CPU_PCT=90                 # Maximum CPU usage percentage
MAX_BATCH_SIZE=128             # Maximum batch size for inference
MAX_REQUEST_SIZE_MB=10         # Maximum request size in MB

# Monitoring and Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
METRICS_ENABLED=true           # Enable metrics collection
METRICS_WINDOW=1000            # Number of requests to keep in metrics
ALERT_ON_ERROR=true            # Send alerts on errors
ALERT_EMAIL=                   # Email for alerts

# Environment
ENVIRONMENT=production         # development, staging, production
DEBUG=false                    # Enable debug mode
TEST_MODE=false                # Enable test mode

# Model Security
MODEL_VALIDATION=true          # Validate model before loading
MODEL_PATH=/path/to/model      # Path to the model
TOKENIZER_NAME=model-tokenizer # Model tokenizer name
INPUT_VALIDATION=true          # Validate model inputs
